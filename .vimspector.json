{
  "configurations": {
    "execute_command": {
      "adapter": "CodeLLDB",
      "filetypes": ["rust"],
      "variables": {
        "CARGO_BUILD_IGNORED": { "shell": "cargo build" }
      },
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/target/debug/bld",
        "args": ["help"]
      }
    },
    "run_local_pipeline": {
      "adapter": "CodeLLDB",
      "filetypes": ["rust"],
      "variables": {
        "CARGO_BUILD_IGNORED": { "shell": "cargo build" }
      },
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/target/debug/bld",
        "args": ["run", "-p", "run-props-sample.container.yaml"]
      }
    },
    "server_mode": {
      "adapter": "CodeLLDB",
      "filetypes": ["rust"],
      "variables": {
        "CARGO_BUILD_IGNORED": { "shell": "cargo build" }
      },
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/target/debug/bld",
        "args": ["-v", "server"]
      }
    }

  }
}
